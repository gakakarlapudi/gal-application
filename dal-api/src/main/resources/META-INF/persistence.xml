<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="appGalleryPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>org.familysearch.gal.application.dal.api.model.ProductDBO</class>
		<class>org.familysearch.gal.application.dal.api.model.ApplicationDBO</class>
		<class>org.familysearch.gal.application.dal.api.model.ApplicationLocaleDBO</class>
		<class>org.familysearch.gal.application.dal.api.model.PartnerDBO</class>
		<properties>
			<property name="hibernate.id.new_generator_mappings" value="true" />
			<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>
